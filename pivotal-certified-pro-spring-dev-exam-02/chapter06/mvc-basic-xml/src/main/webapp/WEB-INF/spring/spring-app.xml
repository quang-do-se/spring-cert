<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- needed to pick up the annotated java-config -->
    <context:component-scan base-package="com.apress.cems"/>

    <!-- Importing java-config class, which are annotated with @Configuration -->
    <bean name="h2DbConfig" class="com.apress.cems.web.config.H2DbConfig" />

    <!-- Importing java-config class, which are annotated with @Configuration -->
    <bean name="serviceConfig" class="com.apress.cems.dj.ServiceConfig" />
</beans>